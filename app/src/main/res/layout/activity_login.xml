<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/login_logo"
        android:maxWidth="320dp"
        android:minWidth="320dp"
        android:maxHeight="320dp"
        android:minHeight="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_passwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="360dp"
        android:height="50dp"
        android:layout_marginTop="250dp"
        android:background="@color/white_opacity"
        android:hint="@string/hint_email"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_passwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/edit_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="360dp"
        android:height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_opacity"
        android:hint="@string/hint_passwd"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="280dp"
        android:height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/txt_btn_login"
        android:textSize="18dp"
        android:textColor="@color/dark_green_opacity"
        android:background="@drawable/btn_radius"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/edit_passwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_viewnotes_prelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="140dp"
        android:height="40dp"
        android:layout_marginTop="90dp"
        android:text="@string/txt_btn_viewnotes_prelogin"
        android:textColor="@color/dark_green_opacity"
        android:background="@drawable/btn_radius"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>